<Page x:Class="ProjectPRN.AdminProductPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Admin Products" 
        Loaded="Page_Loaded">
    <Grid Margin="20" Background="#F5F5F5">
       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="*"/>
          
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>

        <!-- Form Inputs -->
        <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Product ID:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <TextBox x:Name="txtProductId" Grid.Row="0" Grid.Column="1" Margin="5" Width="200" Height="30" VerticalContentAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Product Name:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <TextBox x:Name="txtProductName" Grid.Row="1" Grid.Column="1" Margin="5" Width="200" Height="30" VerticalContentAlignment="Center"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Price:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <TextBox x:Name="txtPrice" Grid.Row="2" Grid.Column="1" Margin="5" Width="200" Height="30" VerticalContentAlignment="Center"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Origin:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <TextBox x:Name="txtOrigin" Grid.Row="3" Grid.Column="1" Margin="5" Width="200" Height="30" VerticalContentAlignment="Center"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Category ID:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <ComboBox x:Name="comboBox1" Grid.Row="4" Grid.Column="1" Margin="5" Width="200" Height="30" 
                          DisplayMemberPath="CategoryId" SelectedValuePath="CategoryId" VerticalContentAlignment="Center"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Image:" VerticalAlignment="Center" FontSize="14" Foreground="#555555"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="txtPicture" Width="200" Height="30" Margin="5" TextChanged="TxtPicture_TextChanged" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Width="100" Height="30" Margin="5" Click="BtnBrowse_Click" FontSize="14"/>
                </StackPanel>

                <!-- Image Preview -->
                <Image x:Name="pictureBox1" Grid.Row="0" Grid.Column="3" Grid.RowSpan="6" Width="200" Height="200" Margin="20,0" Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="dataGridView1" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionChanged="DataGridView1_SelectionChanged" Margin="0,0,0,20" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="Auto"/>
                <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="*"/>
                <DataGridTextColumn Header="Category ID" Binding="{Binding CategoryId}" Width="Auto"/>
                <DataGridTextColumn Header="Image" Binding="{Binding Image}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="100" Height="35" Margin="0,0,10,0" Click="BtnAdd_Click" FontSize="14"/>
            <Button Content="Update" Width="100" Height="35" Margin="0,0,10,0" Click="BtnUpdate_Click" FontSize="14"/>
            <Button Content="Delete" Width="100" Height="35" Margin="0,0,10,0" Click="BtnDelete_Click" FontSize="14"/>
            <Button Content="Clear" Width="100" Height="35" Margin="0,0,0,0" Click="BtnClear_Click" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>