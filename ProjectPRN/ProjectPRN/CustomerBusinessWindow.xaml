<Window x:Class="ProjectPRN.CustomerBusinessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="CustomerBusinessWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/LogoImage/—Pngtree—milk tea pearl milk_1481123.jpg" Stretch="Fill" Opacity="0.3"/>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="70px"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"  Background="#1A237E" Height="70" VerticalAlignment="Top" >
                <Image DockPanel.Dock="Left" Source="/LogoImage/logo.png" Width="46" Height="45" Margin="10" HorizontalAlignment="Left"/>
                <Label DockPanel.Dock="Left" Content="Milk Tea" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" />


                <Image DockPanel.Dock="Right" Source="/LogoImage/close.png" Width="30" Height="30" Margin="10" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Center" MouseLeftButtonDown="Image_MouseLeftButtonDown" />
                <Menu DockPanel.Dock="Right" FontSize="16" FontWeight="Bold" Background="Transparent" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <MenuItem Header="Orders" Click="MenuItemOrders_Click"/>
                    <MenuItem Header="Customers" Click="MenuItemCustomers_Click"/>
                    <MenuItem Header="Product" Click="MenuItemProduct_Click"/>
                </Menu>
            </DockPanel>
            <!-- Bộ lọc tìm kiếm -->
            <!-- Grid chứa 3 ô thống kê -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Top 5 Customer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

                <DataGrid x:Name="TopCustomersDataGrid" AutoGenerateColumns="False" Height="100" Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="100"/>
                        <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="Total Of All Order" Binding="{Binding TotalAmount}" Width="180" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
        </Grid>
        

</Window>
