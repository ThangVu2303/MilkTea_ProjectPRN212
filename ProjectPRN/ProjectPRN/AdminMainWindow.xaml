<Page x:Class="ProjectPRN.AdminStaticPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Admin Statistics" 
        Loaded="Page_Loaded">
    <Grid Margin="20" Background="#F5F5F5">
        <!-- Thêm nền nhẹ -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Orders DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Order Details DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Employee and Manager Info -->
            <RowDefinition Height="Auto"/>
            <!-- Total Revenue -->
        </Grid.RowDefinitions>

        <!-- Filters -->
        <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,20" CornerRadius="8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="txtSearch" Width="200" Height="30" Margin="0,0,15,0" TextChanged="TxtSearch_TextChanged" 
                         ToolTip="Search by Staff ID" VerticalContentAlignment="Center" FontSize="14"/>
                <ComboBox x:Name="cbbEmployeeId" Width="200" Height="30" Margin="0,0,15,0" SelectionChanged="CbbEmployeeId_SelectionChanged" 
                          DisplayMemberPath="StaffId" VerticalContentAlignment="Center" FontSize="14"/>
                <DatePicker x:Name="dpFrom" Margin="0,0,15,0" SelectedDateChanged="DatePicker_SelectedDateChanged" Height="30" FontSize="14"/>
                <DatePicker x:Name="dpTo" Margin="0,0,15,0" SelectedDateChanged="DatePicker_SelectedDateChanged" Height="30" FontSize="14"/>
                <!--<Button x:Name="btnExport" Content="Export to Excel" Width="120" Height="35" Click="BtnExport_Click" FontSize="14"/>-->
            </StackPanel>
        </Border>

        <!-- Orders DataGrid -->
        <DataGrid x:Name="dgvOrder" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionChanged="DgvOrder_SelectionChanged" Margin="0,0,0,20" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="Auto"/>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding StaffId}" Width="Auto"/>
                <DataGridTextColumn Header="Total Payment" Binding="{Binding Total, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="Bill's Date" Binding="{Binding DateCreate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Order Details DataGrid -->
        <DataGrid x:Name="dgvOrderDetails" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,20" Height="200" 
                  Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Employee and Manager Info -->
        <Border Grid.Row="3" Margin="0,0,0,20" Background="#FF4EA693" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Employee Info -->
                <GroupBox Grid.Column="0" Header="Employee Info" Margin="0,0,10,0" Background="White" FontSize="14">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtEId" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtEName" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="DoB:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtEDob" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtEEmail" Grid.Row="3" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="4" Grid.Column="0" Content="Phone:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtEPhone" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="5" Grid.Column="0" Content="Gender:" VerticalAlignment="Center" Foreground="#555555"/>
                        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <RadioButton x:Name="rdbMale1" Content="Male" IsEnabled="False" Margin="5,0,15,0" FontSize="14"/>
                            <RadioButton x:Name="rdbFemale1" Content="Female" IsEnabled="False" Margin="0,0,0,0" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Manager Info -->
                <GroupBox Grid.Column="1" Header="Manager Info" Margin="10,0,0,0" Background="White" FontSize="14">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtMId" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtMName" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="DoB:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtMDob" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtMEmail" Grid.Row="3" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="4" Grid.Column="0" Content="Phone:" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBox x:Name="txtMPhone" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Margin="5" Height="30" VerticalContentAlignment="Center"/>
                        <Label Grid.Row="5" Grid.Column="0" Content="Gender:" VerticalAlignment="Center" Foreground="#555555"/>
                        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <RadioButton x:Name="rdbMale2" Content="Male" IsEnabled="False" Margin="5,0,15,0" FontSize="14"/>
                            <RadioButton x:Name="rdbFemale2" Content="Female" IsEnabled="False" Margin="0,0,0,0" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>

        <!-- Total Revenue -->
        <Label x:Name="lblTotal" Grid.Row="4" Content="Total Revenue: 0 VND" FontSize="18" FontWeight="Bold" Margin="0,0,0,0" 
               Foreground="White" HorizontalAlignment="Right"/>
    </Grid>
</Page>