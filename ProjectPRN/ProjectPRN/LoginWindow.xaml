<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        xmlns:CompilerServices="clr-namespace:System.Runtime.CompilerServices;assembly=System.Runtime" x:Class="ProjectPRN.LoginWindow"
        mc:Ignorable="d"
        Title="LoginWindow" WindowState="Maximized" WindowStyle="None" d:DesignHeight="605" d:DesignWidth="970">

    <Grid>
        <!-- Top Panel -->
        <Border Background="#0078D7" Height="69" VerticalAlignment="Top">
            <Grid>
                <Image Source="/LogoImage/logo.png" Width="46"  Height="45" Margin="10,1,0,0" HorizontalAlignment="Left" />
                <TextBlock Text="Milk Tea" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="70,0,0,0"/>
                <Button Width="39" Height="38" Margin="30,1,20,0" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Click="ButtonShutdown_Click">
                    <Image Source="/LogoImage/close.png"/>
                </Button>
            </Grid>
        </Border>
        <!-- Center Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <Image Source="/LogoImage/logo.png" Width="120" Height="97"/>
            <TextBlock Text="Welcome!" Foreground="#0078D7" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Please login to use the application" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,15"/>

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Username:" Foreground="#0078D7" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="txtUsername" Height="35" FontSize="16"/>
            </StackPanel>

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Password:" Foreground="#0078D7" FontSize="14" FontWeight="Bold"/>
                <PasswordBox Name="txtPassword" Height="35" FontSize="16"/>
            </StackPanel>

            <Button Content="Login" Background="#0078D7" Foreground="White" FontSize="16" FontWeight="Bold"
                    Width="280" Height="42" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
