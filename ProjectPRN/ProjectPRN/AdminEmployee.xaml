<Page x:Class="ProjectPRN.AdminEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Employee Management" 
        Loaded="Page_Loaded">
    <Grid Margin="20">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>

        <!-- Form Inputs -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="User ID:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUserId" Grid.Row="0" Grid.Column="1" Margin="5" Width="200" IsReadOnly="True"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Username:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="1" Margin="5" Width="200"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Margin="5" Width="200"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Role:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboRoleId" Grid.Row="3" Grid.Column="1" Margin="5" Width="200" 
                          DisplayMemberPath="RoleName" SelectedValuePath="RoleId"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Full Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFullName" Grid.Row="4" Grid.Column="1" Margin="5" Width="200"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Phone:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPhone" Grid.Row="5" Grid.Column="1" Margin="5" Width="200"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="dataGridView1" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionChanged="DataGridView1_SelectionChanged" Margin="0,0,0,20"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User ID" Binding="{Binding AccountId}" Width="Auto"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"/>
                <DataGridTextColumn Header="Role ID" Binding="{Binding RoleId}" Width="Auto"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="100" Margin="0,0,10,0" Click="BtnAdd_Click"/>
            <Button Content="Update" Width="100" Margin="0,0,10,0" Click="BtnUpdate_Click"/>
            <Button Content="Delete" Width="100" Margin="0,0,10,0" Click="BtnDelete_Click"/>
            <Button Content="Cancel" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>