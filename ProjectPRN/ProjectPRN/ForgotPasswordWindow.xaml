<Window x:Class="ProjectPRN.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
       Title="Forgot Password" Width="400" Height="300" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Forgot Password" FontSize="20" 
                       FontWeight="Bold" Foreground="#1A237E" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Enter your email address" FontSize="14" 
                       Foreground="#616161" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" Padding="5" 
                     BorderBrush="#B0BEC5" BorderThickness="1"/>

            <Button Content="Reset Password" Background="#1A237E" Foreground="White"
                    FontSize="14" FontWeight="Medium" Width="150" Height="35"
                    Margin="0,20,0,0" HorizontalAlignment="Center"
                    Click="ResetPassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
